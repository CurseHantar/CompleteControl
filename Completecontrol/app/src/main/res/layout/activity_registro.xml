<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".RegistroActivity"
        >


        <TextView
            android:id="@+id/txtGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="16dp"
            android:layout_x="77dp"
            android:layout_y="445dp"
            android:text="Genero"
            android:fontFamily="sans-serif-black"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@android:dimen/app_icon_size"
            android:layout_marginStart="116dp"
            android:layout_marginTop="28dp"
            android:layout_x="61dp"
            android:layout_y="43dp"
            android:text="Ingrese los siguientes datos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtNombre"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_x="68dp"
                    android:layout_y="171dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Nombre completo"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="180dp" />

                <EditText
                    android:id="@+id/txtApellidoM"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_x="69dp"
                    android:layout_y="246dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Apellido Materno"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="324dp" />

                <EditText
                    android:id="@+id/txtApellidoP"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_x="68dp"
                    android:layout_y="313dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Apellido Paterno"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="220dp" />


                <EditText
                    android:id="@+id/txtEdad"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_x="69dp"
                    android:layout_y="388dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Edad"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="247dp" />

                <EditText
                    android:id="@+id/txtCorreo"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_x="62dp"
                    android:layout_y="794dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Correo Electronico"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="247dp" />

                <EditText
                    android:id="@+id/txtDireccion"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_x="63dp"
                    android:layout_y="717dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Direccion"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="247dp" />


                <EditText
                    android:id="@+id/txtTelefono"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_x="64dp"
                    android:layout_y="638dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Telefono"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="247dp" />

                <EditText
                    android:id="@+id/txtRut"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_x="70dp"
                    android:layout_y="111dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Rut"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="108dp" />

            </LinearLayout>
        </ScrollView>

        <RadioGroup
            android:id="@+id/rgGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="68dp"
            android:layout_marginTop="28dp"
            android:layout_x="67dp"
            android:layout_y="489dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGenero">

            <RadioButton
                android:id="@+id/rbtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="70dp"
                android:layout_y="479dp"
                android:text="Masculino" />

            <RadioButton
                android:id="@+id/rbtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="71dp"
                android:layout_y="516dp"
                android:text="Femenino" />

            <RadioButton
                android:id="@+id/rbtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="70dp"
                android:layout_y="559dp"
                android:text="Prefiero no decirlo" />

        </RadioGroup>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="52dp"
            android:layout_marginTop="72dp"
            android:layout_x="20dp"
            android:layout_y="920dp"
            android:onClick="irAct1"
            android:text="Volver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgGenero"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
